# ForkFlix Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# ================================
# REQUIRED PRODUCTION VARIABLES
# ================================

# Firebase Configuration (REQUIRED)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_PATH=/path/to/your/firebase-admin-key.json

# Security (REQUIRED)
SECRET_KEY=your-super-secret-jwt-signing-key-min-32-chars

# ================================
# APPLICATION CONFIGURATION
# ================================

# Environment
ENVIRONMENT=production
DEBUG=false

# API Configuration
BACKEND_URL=https://your-domain.com
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-domain.com

# JWT Token Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Instagram/Facebook API Configuration
# Option 1: Use Facebook App credentials (recommended)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Option 2: Use pre-generated app access token
FACEBOOK_APP_ACCESS_TOKEN=your_facebook_app_access_token

# Option 3: Use Instagram-specific token (if available)
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# Hugging Face API Configuration
# Get your API key from https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
AI_RATE_LIMIT_PER_MINUTE=10

# Logging
LOG_LEVEL=info

# Database Configuration (if using other databases)
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Redis Configuration (if using Redis for caching)
# REDIS_URL=redis://localhost:6379

# Email Configuration (if implementing email features)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=true
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_app_password

# Storage Configuration (if using cloud storage)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your_bucket_name
# AWS_S3_REGION_NAME=us-east-1

# Analytics (if implementing analytics)
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# MIXPANEL_TOKEN=your_mixpanel_token

# Social Media Integration (future features)
# TWITTER_API_KEY=your_twitter_api_key
# TWITTER_API_SECRET=your_twitter_api_secret
# YOUTUBE_API_KEY=your_youtube_api_key

# Production Settings (uncomment for production)
# ENVIRONMENT=production
# DEBUG=false
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com