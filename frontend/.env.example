# Recipe Reel Manager - Frontend Environment Configuration
# Copy this file to .env and fill in your actual values

# Firebase Configuration
# Get these from your Firebase project settings > General > Your apps > Web app
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_firebase_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
REACT_APP_FIREBASE_APP_ID=your_firebase_app_id
REACT_APP_FIREBASE_MEASUREMENT_ID=your_measurement_id

# API Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_VERSION=v1

# Application Settings
REACT_APP_APP_NAME=Recipe Reel Manager
REACT_APP_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true

# Social Media
REACT_APP_INSTAGRAM_REDIRECT_URI=http://localhost:3000/auth/instagram/callback

# Analytics (optional)
REACT_APP_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token

# Sentry (for error tracking in production)
REACT_APP_SENTRY_DSN=your_sentry_dsn

# Map Services (if implementing location features)
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Image Services (if using external image services)
REACT_APP_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# External Services
REACT_APP_LOTTIE_PLAYER_URL=https://unpkg.com/@lottiefiles/lottie-player

# Development Settings
REACT_APP_DEBUG=true
REACT_APP_MOCK_API=false

# Production Settings (uncomment for production)
# REACT_APP_API_URL=https://api.yourdomain.com
# REACT_APP_ENVIRONMENT=production
# REACT_APP_DEBUG=false
# REACT_APP_SENTRY_DSN=your_production_sentry_dsn